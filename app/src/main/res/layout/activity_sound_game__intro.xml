<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/options_gradient_style"
    tools:context=".activities.SoundGame_Intro">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sound_game"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textColor="@color/card2"
        android:padding="5dp"
        android:fontFamily="@font/bangers"
        android:layout_margin="5dp"
        android:textSize="36sp" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.glide.slider.library.SliderLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/sliderLayout"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/drinks"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_image"
                android:padding="3dp"
                android:src="@drawable/drinks1"
                android:contentDescription="@string/category1" />

            <ImageView
                android:id="@+id/foods"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_image"
                android:padding="3dp"
                android:src="@drawable/foods1"
                android:contentDescription="@string/category2" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/drinksBtn"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_gradient_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category1"
                android:onClick="clickButton"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/foodsBtn"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_gradient_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category2"
                android:onClick="clickButton"
                tools:ignore="ButtonStyle" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent" />
    </TableLayout>

</LinearLayout>